{
  "name": "sabd-desktop",
  "version": "0.1.0",
  "description": "Desktop Based Sabd Application",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run rebuild-sqlite3", //http://verysimple.com/2015/05/30/using-node_sqlite3-with-electron/
    "rebuild-sqlite3":"cd node_modules/sqlite3 &amp;&amp; npm run prepublish &amp;&amp; node-gyp configure --module_name=node_sqlite3 --module_path=../lib/binding/node-v46-linux-x64 &amp;&amp; node-gyp rebuild --target=0.37.0 --arch=x64 --target_platform=linux --dist-url=https://atom.io/download/atom-shell --module_name=node_sqlite3 --module_path=../lib/binding/node-v46-linux-x64"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sabd-project/sabd-desktop.git"
  },
  "keywords": [
    "sabd",
    "sikh",
    "guru"
  ],
  "author": "jujhar@jujhar.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sabd-project/sabd-desktop/issues"
  },
  "homepage": "https://github.com/sabd-project/sabd-desktop",
  "devDependencies": {
    "electron-prebuilt": "^0.36.0"
  },
  "dependencies": {
    "express": "^4.13.4",
    "sqlite3": "^3.1.1"
  }
}
